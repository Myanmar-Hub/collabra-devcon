<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_conversation_rlbackground"
                android:background="@drawable/bubble_old_green_left">

    <net.myanmarhub.collabra.widget.ETextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/item_conversation_lblName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#0055f7"
        android:singleLine="true"
        android:padding="5dp"
        android:layout_toLeftOf="@+id/item_conversation_lblTimestamp"/>

    <net.myanmarhub.collabra.widget.ETextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:textColor="@android:color/white"
        android:id="@+id/item_conversation_lblTimestamp"
        android:gravity="center_vertical|right"
        android:layout_alignTop="@+id/item_conversation_lblName"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/item_conversation_lblMessage"
        android:padding="5dp"/>

    <net.myanmarhub.collabra.widget.ETextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="@android:color/black"
        android:id="@+id/item_conversation_lblMessage"
        android:padding="5dp"
        android:layout_below="@+id/item_conversation_lblName"
        android:layout_alignParentRight="true"/>
</RelativeLayout>